{
    "name": "r2c-wallet-validator",
    "version": "1.1.2",
    "description": "A comprehensive and lightweight utility to validate cryptocurrency wallet addresses across multiple chains like EVM, Solana, Bitcoin, Polkadot, and Cosmos. Maintained by Road2Crypto - The #1 Crypto Portfolio Tracker.",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "lint": "tsc",
        "setup": "npm i && npm run build",
        "test": "npm run setup && npm run lint && jest",
        "update": "npx npm-check-updates -u && npm install",
        "publish": "npm test && npm publish --access public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Road2Crypto/wallet-address-validator.git"
    },
    "homepage": "https://github.com/Road2Crypto/wallet-address-validator#readme",
    "bugs": {
        "url": "https://github.com/Road2Crypto/wallet-address-validator/issues"
    },
    "keywords": [
        "wallet",
        "address",
        "validator",
        "cryptocurrency",
        "crypto",
        "blockchain",
        "EVM",
        "Solana",
        "Bitcoin",
        "Cosmos",
        "Polkadot",
        "Cardano",
        "ethereum",
        "btc",
        "sol",
        "web3",
        "check",
        "format",
        "verify"
    ],
    "author": {
        "name": "Road2Crypto",
        "url": "https://road2crypto.com"
    },
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "7.28.5",
        "@babel/preset-env": "7.28.5",
        "@babel/preset-typescript": "7.28.5",
        "@types/jest": "30.0.0",
        "babel-jest": "30.2.0",
        "jest": "30.2.0",
        "ts-jest": "29.4.6",
        "tsup": "8.5.1",
        "typescript": "5.9.3"
    }
}
