{
    "name": "r2c-wallet-validator",
    "version": "1.0.1",
    "description": "A simple utility to validate cryptocurrency wallet addresses for EVM, Solana, and Bitcoin chains.",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "lint": "tsc",
        "setup": "npm i && npm run build",
        "test": "npm run setup && npm run lint && jest",
        "publish": "npm test && npm publish --access public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Road2Crypto/wallet-address-validator.git"
    },
    "keywords": [
        "wallet",
        "address",
        "validator",
        "cryptocurrency",
        "EVM",
        "Solana",
        "Bitcoin"
    ],
    "author": "Road2Crypto",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "7.24.6",
        "@babel/preset-env": "7.24.6",
        "@babel/preset-typescript": "7.24.6",
        "@types/jest": "29.5.12",
        "babel-jest": "29.7.0",
        "jest": "29.7.0",
        "ts-jest": "29.1.4",
        "tsup": "8.0.2",
        "typescript": "5.4.5"
    }
}
