{
    "compilerOptions": {
        "target": "ESNext", // Use the latest ECMAScript target
        "module": "commonjs", // Use CommonJS modules
        "strict": true, // Enable strict type-checking options
        "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
        "skipLibCheck": true, // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true, // Ensure file name casing consistency
        "outDir": "./dist", // Specify the output directory
        "declaration": true, // Generate .d.ts files alongside .js files
        "declarationMap": true // Generate sourcemaps for .d.ts files
    },
    "include": [
        "src",
        "tests"
    ]
}